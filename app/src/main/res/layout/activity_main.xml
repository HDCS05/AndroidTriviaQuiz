<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrd"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Question 1-->
        <TextView
            style="@style/questions_properties"
            android:text="@string/question1" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/radiogroup">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/darkred"
                android:text="LG" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Motorola" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Samsung" />
        </RadioGroup>

        <!--Drawing a line divider-->
        <View
            style="@style/divider"
            android:layout_width="match_parent" />

        <!--Question 2-->
        <TextView
            style="@style/questions_properties"
            android:text="@string/question2" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/linearquestion2">

            <TextView
                android:id="@+id/number_question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="0"
                android:textColor="@color/darkred"
                android:textStyle="bold"
                android:textSize="36sp" />

            <SeekBar
                android:id="@+id/seekbar_question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />

        </LinearLayout>

        <!--Drawing a line divider-->
        <View
            style="@style/divider"
            android:layout_width="match_parent" />

        <!--Question 3-->
        <TextView
            style="@style/questions_properties"
            android:text="@string/question3" />

        <!--Drawing a line divider-->
        <View
            style="@style/divider"
            android:layout_width="match_parent" />

        <!--Question 4-->
        <TextView
            style="@style/questions_properties"
            android:text="@string/question4" />

        <!--Drawing a line divider-->
        <View
            style="@style/divider"
            android:layout_width="match_parent" />

        <!--Question 5-->
        <TextView
            style="@style/questions_properties"
            android:text="@string/question5" />

        <!--Drawing a line divider-->
        <View
            style="@style/divider"
            android:layout_width="match_parent" />

        <!--Question 6-->
        <TextView
            style="@style/questions_properties"
            android:text="@string/question6" />

        <!--Drawing a line divider-->
        <View
            style="@style/divider"
            android:layout_width="match_parent" />

        <!--Button to submit answers-->
        <Button
            android:id="@+id/submitButton"
            style="@style/buttonsubmit"
            android:text="@string/buttonsubmit" />

    </LinearLayout>

</ScrollView>